<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.0/phpunit.xsd"
    colors="true"
    cacheDirectory=".phpunit.cache">
    <php>
        <env name="WARDEN_PRIMARY_KEY_TYPE" value="ulid" />
        <env name="WARDEN_ACTOR_MORPH_TYPE" value="ulidMorph" />
        <env name="WARDEN_CONTEXT_MORPH_TYPE" value="ulidMorph" />
        <env name="WARDEN_SUBJECT_MORPH_TYPE" value="ulidMorph" />
    </php>
    <source>
        <include>
            <directory suffix=".php">./src</directory>
        </include>
        <exclude>
            <file>./src/WardenServiceProvider.php</file>
        </exclude>
    </source>
    <testsuites>
        <testsuite name="default">
            <directory suffix=".php">./tests</directory>
            <exclude>./tests/ReportedIssuesTest.php</exclude>
            <exclude>./tests/SyncTest.php</exclude>
            <exclude>./tests/TablePrefixTest.php</exclude>
            <exclude>./tests/TitledAbilitiesTest.php</exclude>
            <exclude>./tests/WildcardsTest.php</exclude>
            <exclude>./tests/Unit/Console/MigrateFromBouncerCommandTest.php</exclude>
            <exclude>./tests/Unit/Conductors</exclude>
            <exclude>./tests/Unit/Constraints</exclude>
            <exclude>./tests/Unit/Database</exclude>
            <exclude>./tests/Unit/Enums</exclude>
            <exclude>./tests/Unit/Facades</exclude>
            <exclude>./tests/Unit/GuardScopingTest.php</exclude>
            <exclude>./tests/Unit/GuardTest.php</exclude>
            <exclude>./tests/Unit/Http</exclude>
            <exclude>./tests/Unit/Migrators/GuardMigrationTest.php</exclude>
            <exclude>./tests/Unit/Migrators/SpatieMigratorTest.php</exclude>
            <exclude>./tests/Unit/Support</exclude>
            <exclude>./tests/Unit/WardenTest.php</exclude>
            <exclude>./tests/QueryScopes</exclude>
            <exclude>./tests/HelpersTest.php</exclude>
        </testsuite>
    </testsuites>
</phpunit>
